<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.aqi.controllers.HealthProfileController">

    <VBox alignment="CENTER"
          spacing="30"
          styleClass="card"
          maxWidth="520">

        <Label text="Health Profile"
               styleClass="title"/>

        <GridPane hgap="20" vgap="18">

            <Label text="Age:" styleClass="form-label"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="ageField"
                       promptText="Enter age"
                       prefWidth="220"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Gender:" styleClass="form-label"
                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="genderCombo"
                      prefWidth="220"
                      GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Location:" styleClass="form-label"
                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="locationField"
                       promptText="Enter city"
                       prefWidth="220"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Asthma:" styleClass="form-label"
                   GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <CheckBox fx:id="asthmaCheck"
                      text="Yes"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Breathing Condition:" styleClass="form-label"
                   GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="breathingCombo"
                      prefWidth="220"
                      GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        </GridPane>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Save"
                    fx:id="saveButton"
                    styleClass="primary-btn"/>
            <Button text="Cancel"
                    styleClass="secondary-btn"/>
        </HBox>

        <HBox alignment="CENTER"
              fx:id="successBox"
              styleClass="success-box"
              visible="false"
              managed="false">

            <Label text="âœ” Profile saved successfully!"
                   styleClass="success-text"/>
        </HBox>

    </VBox>

</StackPane>
